#index>.shouye{overflow:hidden;}
    #index>.shouye ul{
    width: 2988px;
    height: 328px;
    animation: lunbo 10s linear infinite;
}
#index>.shouye ul li{
    list-style: none;
    float: left;    
}
#index>.shouye ul li img{
    width: 996px;
    height: 328px;
}
@keyframes lunbo{
    from{
        transform: translateX(0px);
    }
    to{
        transform: translateX(-1992px);
    }
}
#index>.shouye:hover ul{
    animation-play-state: paused;
}

 
